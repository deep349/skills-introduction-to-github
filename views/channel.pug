extends layout

block content
  .channel-page
    .channel-header
      .channel-avatar-large= channelUser.username[0].toUpperCase()
      .channel-header-info
        h1= channelUser.username
        p #{videos.length} video#{videos.length !== 1 ? 's' : ''}

    h3.section-title Uploaded Videos

    if videos.length === 0
      .empty-state
