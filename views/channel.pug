        p No videos yet.

    .video-grid
      each video in videos
        a.video-card(href=`/videos/${video.id}`)
          .thumbnail-wrapper
            if video.thumbnail
              img.thumbnail(src=`/uploads/thumbnails/${video.thumbnail}` alt=video.title)
            else
              .thumbnail-placeholder
                span â–¶
          .video-info
            h3.video-title= video.title
            .video-stats
              span.views #{video.views} views
